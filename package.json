{
	"name": "rpgmaker-tools",
	"displayName": "rpgmaker-tools",
	"description": "RPG Maker MV/MZ Tools",
	"version": "0.0.3",
	"publisher": "zjkmxy",
	"repository": "https://github.com/zjkmxy/vscode-rm",
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "rpgmaker-panel",
					"title": "RPG Maker",
					"icon": "assets/view-container.png"
				}
			]
		},
		"views": {
			"rpgmaker-panel": [
				{
					"id": "rpgmaker.mapTile",
					"name": "Map Tiles",
					"type": "webview",
					"icon": "assets/webview.png"
				}
			]
		},
		"customEditors": [
			{
				"viewType": "rpgmaker.mapEditor",
				"displayName": "RM Map Editor",
				"selector": [
					{
						"filenamePattern": "**/data/Map*.json"
					}
				]
			}
		],
		"commands": []
	},
	"scripts": {
		"build": "webpack --mode development",
		"vscode:prepublish": "webpack --mode development",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -watch -p ./",
		"package": "vsce package"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^22",
		"@types/path-browserify": "^1",
		"@types/vscode": "^1.100.0",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"path-browserify": "^1.0.1",
		"prettier": "^3.6.2",
		"ts-loader": "^9.5.4",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0",
		"webpack": "^5.101.3",
		"webpack-cli": "^6.0.1"
	},
	"workspaces": [
		"map-editor",
		"map-tile",
		"rm-common"
	],
	"packageManager": "yarn@4.10.2",
	"resolutions": {
		"@types/css-font-loading-module@npm:^0.0.12": "patch:@types/css-font-loading-module@npm%3A0.0.12#~/.yarn/patches/@types-css-font-loading-module-npm-0.0.12-dc54dc5612.patch"
	},
	"dependencies": {
		"eventemitter3": "^5.0.1"
	}
}
